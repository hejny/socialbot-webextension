{
  "manifest_version": 2,
  "name": "Gravity",
  "version": "1.0.3",
  "author": "Pavol Hejn√Ω",
  "description": "Make your websites happier.",
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/48.png"
    },
    "default_title": "Gravity!"
  }
}
