{
  "manifest_version": 2,
  "name": "Socialbot",
  "version": "0.0.1",
  "author": "Pavol Hejn√Ω",
  "description": "Automatical behavior on social networks.",
  "background": {
    "scripts": ["lib/jquery-3.2.1.min.js","src/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/48.png"
    },
    "default_title": "Gravity!"
  }
}
